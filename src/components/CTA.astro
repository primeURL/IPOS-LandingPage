---
// Call-to-action section
const dashboardUrl = import.meta.env.PUBLIC_DASHBOARD_URL || 'http://localhost:3000';
---

<section id="cta" class="relative py-24 px-4 sm:px-6 lg:px-8">
  <!-- Background with gradient -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600 via-cyan-600 to-sky-600 opacity-10"></div>
    <div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:50px_50px]"></div>
  </div>

  <div class="relative z-10 max-w-5xl mx-auto">
    <div class="bg-gradient-to-br from-blue-600/20 to-cyan-600/20 backdrop-blur-xl border border-white/20 rounded-3xl p-12 md:p-16 text-center shadow-2xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-8">
        <span class="text-sm font-medium text-emerald-300">ðŸŽ‰ Join 10,000+ successful candidates</span>
      </div>

      <!-- Heading -->
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black mb-6">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-slate-200">
          Ready to Transform Your
        </span>
        <br />
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-cyan-400 to-sky-400">
          Interview Preparation?
        </span>
      </h2>

      <!-- Description -->
      <p class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto">
        Start your journey to interview success today. No credit card required. No setup hassle. Just pure preparation power.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
        <a 
          href={dashboardUrl}
          class="group relative inline-flex items-center gap-2 px-10 py-5 bg-white text-blue-600 rounded-xl font-bold text-lg shadow-2xl hover:shadow-white/50 transition-all duration-300 hover:scale-105 hover:-translate-y-1"
        >
          <span>Start Free Now</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        
        <a 
          href="#features" 
          class="group inline-flex items-center gap-2 px-10 py-5 bg-white/10 backdrop-blur-sm border border-white/30 rounded-xl font-bold text-lg hover:bg-white/20 transition-all duration-300"
        >
          <span>View Demo</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-slate-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>No credit card required</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Free forever</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Setup in 30 seconds</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
